---
import Button from "./Button.astro";
---

<section
  id="home"
  class="w-full flex justify-center items-center py-20 md:py-32"
>
  <div
    class="w-full max-w-7xl flex flex-col-reverse gap-4 md:gap-2 md:grid md:grid-cols-2"
  >
    <div class="flex flex-col justify-center items-center md:items-start gap-3">
      <img src="/logo.jpg" class="w-40" />
      <div
        class="flex flex-col justify-start items-center text-center md:text-left md:items-start gap-4"
      >
        <h1 class="text-5xl md:text-7xl w-5/6 font-bold">
          Modernas soluciones en montacargas
        </h1>
        <Button href="#contact">Cont√°ctanos</Button>
      </div>
    </div>
    <div
      class="relative overflow-hidden w-full h-full aspect-[4/3] group rounded-md"
    >
      <img
        src="/hero.jpg"
        class="absolute w-full h-full object-cover object-[80%,100%] md:aspect-[3/4] rounded-md group-hover:scale-110 transition-transform"
      />
      <div class="w-full h-full bg-red-500 opacity-40"></div>
    </div>
  </div>
</section>
